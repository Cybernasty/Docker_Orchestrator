				{
					"name": "Build Image from Dockerfile",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"dockerfileContent\": \"FROM nginx:alpine\\nCOPY index.html /usr/share/nginx/html/\",\n    \"imageName\": \"my-nginx\",\n    \"tag\": \"v1.0\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/containers/build-image",
							"host": ["{{base_url}}"],
							"path": ["api", "containers", "build-image"]
						}
					}
				},
				{
					"name": "Create Container from Image",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"imageName\": \"nginx:alpine\",\n    \"containerName\": \"my-nginx-container\",\n    \"ports\": [\n        {\n            \"host\": \"8080\",\n            \"container\": \"80\"\n        }\n    ],\n    \"environment\": [\n        {\n            \"key\": \"ENV_VAR\",\n            \"value\": \"value\"\n        }\n    ],\n    \"volumes\": [\n        {\n            \"host\": \"/host/path\",\n            \"container\": \"/container/path\",\n            \"mode\": \"rw\"\n        }\n    ],\n    \"network\": \"bridge\",\n    \"restartPolicy\": \"unless-stopped\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/containers/create",
							"host": ["{{base_url}}"],
							"path": ["api", "containers", "create"]
						}
					}
				},
				{
					"name": "Build and Create Container",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"dockerfileContent\": \"FROM node:16-alpine\\nWORKDIR /app\\nCOPY package*.json ./\\nRUN npm install\\nCOPY . .\\nCMD [\\\"npm\\\", \\\"start\\\"]\",\n    \"imageName\": \"my-app\",\n    \"containerName\": \"my-app-container\",\n    \"tag\": \"latest\",\n    \"ports\": [\n        {\n            \"host\": \"3000\",\n            \"container\": \"3000\"\n        }\n    ],\n    \"environment\": [\n        {\n            \"key\": \"NODE_ENV\",\n            \"value\": \"production\"\n        }\n    ]\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/containers/build-and-create",
							"host": ["{{base_url}}"],
							"path": ["api", "containers", "build-and-create"]
						}
					}
				}
